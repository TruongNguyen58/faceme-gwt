<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<servlet>
		<servlet-name>GwtChannelService</servlet-name>
		<servlet-class>com.google.gwt.channelapi.server.GwtChannelServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GwtChannelService</servlet-name>
		<url-pattern>/FacemeMGwt/gwtChannelService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>GwtGsonService</servlet-name>
		<servlet-class>com.example.gwt.gson.server.GwtGsonServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GwtGsonService</servlet-name>
		<url-pattern>/FacemeMGwt/gwtGsonService</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>SystemServiceServlet</servlet-name>
		<servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
		<init-param>
			<param-name>services</param-name>
			<param-value />
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>SystemServiceServlet</servlet-name>
		<url-pattern>/_ah/spi/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>DatabaseService</servlet-name>
		<servlet-class>mgwt.faceme.server.DatabaseServiceImpl</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>DatabaseService</servlet-name>
		<url-pattern>/FacemeMGwt/DatabaseService</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>ObjectifyFilter</filter-name>
		<filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>ObjectifyFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
